 #include <zephyr/dt-bindings/gpio/gpio.h>
 #include <zephyr/dt-bindings/i2c/i2c.h>

/ {
    vdd_p: vdd-p {
		compatible = "regulator-fixed";
		regulator-name = "vdd-p";
        regulator-always-on;
	};

    vdd_amp: vdd-amp {
		compatible = "regulator-fixed";
		regulator-name = "vdd-amp";
        regulator-always-on;
	};
};

&usart1 {
    status = "disabled";
};

&i2c1 {
    pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
    status = "okay";
    clock-frequency = <I2C_BITRATE_FAST>;

    cs35l56_l: cs35l56@30 {
        compatible = "cirrus,cs35l56";
        reg = <0x30>;
        status = "okay";

        reset-gpios = <&gpioa 7 GPIO_ACTIVE_LOW>;
    };

    cs35l56_r: cs35l56@31 {
        compatible = "cirrus,cs35l56";
        reg = <0x31>;
        status = "okay";
    };

    cs35l56_bl: cs35l56@34 {
        compatible = "cirrus,cs35l56";
        reg = <0x34>;
        status = "okay";
    };

    cs35l56_br: cs35l56@35 {
        compatible = "cirrus,cs35l56";
        reg = <0x35>;
        status = "okay";
    };
};
